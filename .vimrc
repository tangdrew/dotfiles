syntax on
filetype plugin indent on
set visualbell
set number
set wildmenu
set wildmode=list:longest,full
set splitright
set splitbelow
set hidden
set ruler
set showcmd
set history=50
set nobackup
set nowritebackup
set noswapfile
set nojoinspaces
set tabstop=2
set backspace=2
set shiftwidth=2
set ts=2 sw=2 et
set shiftround
set expandtab
set noundofile
set undodir=~/.vim/undo
